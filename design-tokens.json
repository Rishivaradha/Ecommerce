{
  "colors": {
    "--bg": "#f8fafc",
    "--text": "#171717",
    "--card": "#ffffff",
    "--accent": "#0f172a",
    "--accent-light": "#111827",
    "--muted-text": "#4b5563",
    "--border": "#e5e7eb",
    "--shadow": "0 20px 25px -5px rgba(15, 23, 42, 0.15)",
    "--success": "#22c55e",
